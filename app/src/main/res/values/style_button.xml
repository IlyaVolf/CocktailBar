<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilledButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.Normal.24</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="rippleColor">@color/color_ripple</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OutlineButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAppearance">@style/Text.Normal.24</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/color_ripple</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FilledButton.0W">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="OutlineButton.0W">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="FilledButton.MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="OutlineButton.MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

</resources>